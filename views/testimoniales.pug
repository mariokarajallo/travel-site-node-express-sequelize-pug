extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row
            h2.d-block.w-100.text-center Agrega Un testimonial 

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="" method='POST') 
                        .form-group
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder='Tu Nombre', class='form-control')
                        .form-group
                            label(for="correp") Correo 
                            input#correo(type="text", placeholder='Tu Correo', class='form-control')
                        .form-group
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(name="mensaje", rows="3", class='form-control', placeholder='Tu mensaje') 
                        input.btn.btn-success.btn-block(type="submit")
